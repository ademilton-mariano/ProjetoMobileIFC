<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="#2e6e42">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/imagem_login" />

                <TextView
                    android:id="@+id/TextViewLogin"
                    android:layout_height="wrap_content"
                    android:textSize="42dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="300dp"
                    android:textColor="#030303"
                    android:textColorHighlight="@color/cardview_light_background"
                    android:text="Login" />

                <EditText
                    android:id="@+id/EdiTextLogin"
                    android:layout_width="300dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:minHeight="42dp"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/TextViewSenha"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="Senha"
                    android:textColor="#030303"
                    android:textColorHighlight="@color/cardview_light_background"
                    android:textSize="42dp" />

                <EditText
                    android:id="@+id/EdiTextSenha"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:minHeight="42dp"
                    android:inputType="textPassword" />

                <Button
                    android:id="@+id/ButtonAcessar"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:drawableBottom="@color/black"
                    android:text="Acessar" />

                <TextView
                    android:id="@+id/TextViewResultado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_red_dark"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:visibility="gone" />

        </LinearLayout>

</android.support.constraint.ConstraintLayout>
